<main>
  <div class="container-form">
    <div class="header-connexion">
      <%= image_tag "logo-granular.png"%>
      <h1 class="title-connexion">Se connecter Ã  <br>The Collector</h1>
    </div>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, label: 'E-Mail',
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password, label: 'Mot de passe',
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, label: 'Se souvenir de moi',
                    as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Se Connecter", class: "btn btn-flat" %>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</main>
