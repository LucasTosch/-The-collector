<div class="container" style="padding: 20px">
  <h2 style= "text-align: center">Mes Messages</h2>
  <% @chatrooms.each do |chatroom| %>
  <div class="card">
    <div class="notification" style="display: block; justify-content: space-between;">
      <div style="display: flex; margin: 16px;">
        <% if chatroom.sender != current_user %>
            <%= cl_image_tag chatroom.sender.image.key, class: "avatar-perso vertical-align", alt: "avatar-large" %>
          <div class="notification-content" style="flex-grow: 15;padding-left: 30px;">
            <p><small><%= chatroom.updated_at %></small></p>
            <p><strong><%= chatroom.sender.username %></strong></p>
          </div>
        <% else %>
          <%= cl_image_tag chatroom.receiver.image.key, class: "avatar-perso vertical-align", alt: "avatar-large" %>
            <div class="notification-content" style="flex-grow: 15;padding-left: 30px;">
              <p><small><%= chatroom.updated_at %></small></p>
              <p><strong><%= chatroom.receiver.username %></strong></p>
            </div>
        <% end %>
        <div class="notification-actions" style="align-self: center; padding-right: 20px;">
          <%= link_to 'Discuter', chatroom_path(chatroom), class: "btn btn-primary" %>
          <%= link_to 'Archiver', chatroom_path(chatroom), method: :delete, class: "btn btn-primary", data: { confirm: "ÃŠtes-vous sÃ»r ?" } %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
