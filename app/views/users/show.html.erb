<div class="container-users">
  <div class="flex-profil">
    <div class="carte-container">
      <div class="carte-profil">
        <h5 class="carte-title"><%= @user.username %></h5>
        <% if @user.trader == true %>
          <%= @user.trader_score %>
        <% end %>
        <% if @user.player == true %>
          <%= @user.player_score %>
        <% end %>
          <%= @user.trust_score %>
        <div class="carte-image">
          <% if @user.image%>
            <%= cl_image_tag @user.image.key, width: '100%', height: '257px'%>
          <% end %>
        </div>
        <div class="carte-body">
          <div>
            <% if @user_games == 'Yu-gi-Oh'%>
              <h6>Duelliste</h6>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="card description-profil">
      <h2 class="card-header">Description</h2>
      <div class="card-body", style="display: flex">
        <p class="card-text">
            <%= @user.description %>
        </p>
        <% if current_user == @user %>
          <div class="modifier-profil">
            <%= link_to 'Modifier mon profil', edit_user_path(@user), class: "btn btn-primary"  %>
          </div>
        <% end %>
      </div>
      <h2 class="card-header">Historique des duels</h2>
      <div class="card-body">
        <p class="card-text">
          Trouve un adversaire sur la carte et lance tes premiers duels !
        </p>
      </div>
      <div class="retour-profil">
        <%= link_to 'Discuter', chatroom_path(@user), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
